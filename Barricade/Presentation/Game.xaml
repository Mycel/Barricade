            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="DobbelKnop" Click="DobbelKnop_Click" Grid.ColumnSpan="4" Margin="15,-158,-119,132">Dobbel</Button>
        </Grid>
        <Label x:Name="GetalLabel" Content="0" HorizontalAlignment="Left" Margin="21,10,0,0" VerticalAlignment="Top" Height="66" Width="100" FontSize="50" HorizontalContentAlignment="Center" />
        <Button Name="AfbreekKnop" Content="Menu" HorizontalAlignment="Left" Margin="21,448,0,0" VerticalAlignment="Top" Width="75" Click="AfbreekKnop_Click"/>
        <Button Name="AfsluitKnop" Content="Afsluiten" HorizontalAlignment="Left" Margin="21,488,0,0" VerticalAlignment="Top" Width="75" Click="AfsluitKnop_Click"/>
    </Grid>
</Window>
